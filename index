function Nav() {
  const items = [
    { href: "#models", label: "Модели" },
    { href: "#features", label: "Преимущества" },
    { href: "#apps", label: "Приложения" },
    { href: "#gallery", label: "Галерея" },
    { href: "#faq", label: "FAQ" },
    { href: "#contact", label: "Контакты" },
  ];
  return (
    <div className="fixed top-4 left-1/2 -translate-x-1/2 z-50">
      <nav className="backdrop-blur supports-[backdrop-filter]:bg-white/5 bg-white/10 border border-white/10 rounded-2xl shadow-lg px-4 md:px-6 py-2 flex items-center gap-4">
        <a href="#" className="font-semibold tracking-wide text-white/90">JETOUR APPS</a>
        <div className="hidden md:flex items-center gap-4 text-sm">
          {items.map((it) => (
            <a key={it.href} href={it.href} className="text-white/70 hover:text-white transition">
              {it.label}
            </a>
          ))}
        </div>
        <a href="#contact" className="ml-4 hidden md:inline-flex text-sm px-3 py-1.5 rounded-xl bg-white text-black hover:opacity-90">Заказать</a>
      </nav>
    </div>
  );
}

