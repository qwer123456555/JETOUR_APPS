function Features() {
  return (
    <Section id="features" className="py-16 md:py-24">
      <h2 className="text-3xl md:text-4xl font-bold text-white mb-10">Преимущества</h2>
      <div className="grid sm:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6">
        {features.map(({ icon: Icon, title, desc }, i) => (
          <motion.div
            key={title}
            initial={{ y: 18, opacity: 0 }}
            whileInView={{ y: 0, opacity: 1 }}
            viewport={{ once: true, amount: 0.4 }}
            transition={{ delay: i * 0.05 }}
            className="group relative overflow-hidden rounded-2xl border border-white/10 bg-white/5 p-5 backdrop-blur hover:bg-white/10"
          >
            <div className="flex items-start gap-4">
              <div className="p-2 rounded-xl bg-white/10"><Icon /></div>
              <div>
                <h3 className="font-semibold text-white mb-1">{title}</h3>
                <p className="text-white/70 text-sm">{desc}</p>
              </div>
            </div>
          </motion.div>
        ))}
      </div>
    </Section>
  );
}

function Models() {
  const [open, setOpen] = useState(null);
  return (
    <Section id="models" className="py-16 md:py-24">
      <div className="flex items-end justify-between gap-4 mb-8">
        <h2 className="text-3xl md:text-4xl font-bold text-white">Модели JETOUR</h2>
        <p className="text-white/60 text-sm md:text-base">Нажмите на карточку, чтобы раскрыть детали установки</p>
      </div>
      <div className="grid md:grid-cols-3 gap-6">
        {models.map((m) => (
          <div key={m.id} className="rounded-2xl overflow-hidden border border-white/10 bg-white/5 backdrop-blur">
            <button
              onClick={() => setOpen(open === m.id ? null : m.id)}
              className="w-full text-left"
            >
              <div className="relative aspect-[4/3]">
                <img src={m.thumb} alt={m.name} className="w-full h-full object-cover" />
                <div className="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent" />
                <div className="absolute bottom-4 left-4 right-4 flex items-center justify-between">
                  <div className="text-white text-lg font-semibold drop-shadow-lg">{m.name}</div>
                  <div className="text-white/90 bg-white/10 backdrop-blur px-2 py-1 rounded-xl text-sm flex items-center gap-1">
                    {open === m.id ? <ChevronDown size={16}/> : <ChevronRight size={16}/>} Подробнее
                  </div>
                </div>
              </div>
            </button>
            <AnimatePresence initial={false}>
              {open === m.id && (
                <motion.div
                  initial={{ height: 0, opacity: 0 }}
                  animate={{ height: "auto", opacity: 1 }}
                  exit={{ height: 0, opacity: 0 }}
                  className="px-5 pb-5"
                >
                  <div className="grid grid-cols-1 gap-4 pt-4">
                    <div>
                      <div className="text-white/80 text-sm mb-1">Входит в комплект:</div>
                      <ul className="grid grid-cols-1 gap-2">
                        {m.details.apps.map((a) => (
                          <li key={a} className="flex items-center gap-2 text-white/90 text-sm">
                            <Check size={16} className="shrink-0"/> {a}
                          </li>
                        ))}
                      </ul>
                    </div>
                    <div className="flex flex-wrap items-center gap-3 text-sm text-white/80">
                      <span className="px-3 py-1 rounded-xl bg-white/10 border border-white/10">⏱ {m.details.time}</span>
                      <span className="px-3 py-1 rounded-xl bg-white/10 border border-white/10">📍 {m.details.remote}</span>
                      <span className="px-3 py-1 rounded-xl bg-white/10 border border-white/10">🛡 {m.details.warranty}</span>
                      <span className="px-3 py-1 rounded-xl bg-white text-black font-semibold">{m.details.price}</span>
                    </div>
                  </div>
                </motion.div>
              )}
            </AnimatePresence>
          </div>
        ))}
      </div>
    </Section>
  );
}

