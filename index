function Models() {
  const [open, setOpen] = useState(null);
  return (
    <Section id="models" className="py-16 md:py-24">
      <div className="flex items-end justify-between gap-4 mb-8">
        <h2 className="text-3xl md:text-4xl font-bold text-white">–ú–æ–¥–µ–ª–∏ JETOUR</h2>
        <p className="text-white/60 text-sm md:text-base">–ù–∞–∂–º–∏—Ç–µ –Ω–∞ –∫–∞—Ä—Ç–æ—á–∫—É, —á—Ç–æ–±—ã —Ä–∞—Å–∫—Ä—ã—Ç—å –¥–µ—Ç–∞–ª–∏ —É—Å—Ç–∞–Ω–æ–≤–∫–∏</p>
      </div>
      <div className="grid md:grid-cols-3 gap-6">
        {models.map((m) => (
          <div key={m.id} className="rounded-2xl overflow-hidden border border-white/10 bg-white/5 backdrop-blur">
            <button
              onClick={() => setOpen(open === m.id ? null : m.id)}
              className="w-full text-left"
            >
              <div className="relative aspect-[4/3]">
                <img src={m.thumb} alt={m.name} className="w-full h-full object-cover" />
                <div className="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent" />
                <div className="absolute bottom-4 left-4 right-4 flex items-center justify-between">
                  <div className="text-white text-lg font-semibold drop-shadow-lg">{m.name}</div>
                  <div className="text-white/90 bg-white/10 backdrop-blur px-2 py-1 rounded-xl text-sm flex items-center gap-1">
                    {open === m.id ? <ChevronDown size={16}/> : <ChevronRight size={16}/>} –ü–æ–¥—Ä–æ–±–Ω–µ–µ
                  </div>
                </div>
              </div>
            </button>
            <AnimatePresence initial={false}>
              {open === m.id && (
                <motion.div
                  initial={{ height: 0, opacity: 0 }}
                  animate={{ height: "auto", opacity: 1 }}
                  exit={{ height: 0, opacity: 0 }}
                  className="px-5 pb-5"
                >
                  <div className="grid grid-cols-1 gap-4 pt-4">
                    <div>
                      <div className="text-white/80 text-sm mb-1">–í—Ö–æ–¥–∏—Ç –≤ –∫–æ–º–ø–ª–µ–∫—Ç:</div>
                      <ul className="grid grid-cols-1 gap-2">
                        {m.details.apps.map((a) => (
                          <li key={a} className="flex items-center gap-2 text-white/90 text-sm">
                            <Check size={16} className="shrink-0"/> {a}
                          </li>
                        ))}
                      </ul>
                    </div>
                    <div className="flex flex-wrap items-center gap-3 text-sm text-white/80">
                      <span className="px-3 py-1 rounded-xl bg-white/10 border border-white/10">‚è± {m.details.time}</span>
                      <span className="px-3 py-1 rounded-xl bg-white/10 border border-white/10">üìç {m.details.remote}</span>
                      <span className="px-3 py-1 rounded-xl bg-white/10 border border-white/10">üõ° {m.details.warranty}</span>
